<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="sql">

	<!-- 게시판 샘플 -->
    <select id="getList" resultType="hashmap" >
		 SELECT no,subject,regdate
		 FROM board
	</select>
	<select id="getBoard" parameterType="int" resultType="hashmap"> 
		 SELECT *
		 FROM board
		 WHERE no = #{no}
	</select>
	<select id="count" resultType="int">
		SELECT count(*)
		FROM board
	</select>
	<insert id="insertBo">
		INSERT INTO
		board(subject,content,regdate)
		VALUES(#{subject},#{content},now())
	</insert>
	<delete id="deleteBo" parameterType="int">
		DELETE
		FROM board
		WHERE no = #{no}
	</delete>
	<update id="updateBo">
		UPDATE board
		SET subject = #{subject}, content = #{content}, regdate = now()
		WHERE no = #{no}
	</update>
</mapper>
